.row
  .col-md-12
    %h1.title 
      Gestão de páginas
      %small
        %p listagem de páginas do site
.divider
.row
  .col-md-12
    .panel.panel-default
      .panel-heading
        %h5
          %b Total listado:
          #{@pages.count}
      .panel-body
        .row
          .col-md-12
            = link_to "+ Adicionar nova página", new_page_path, class: 'btn btn-success btn-sm'
        .divider
        .row
          .col-md-12
            %table.table.table-striped.table-bordered
              %thead
                %tr
                  %th Nome
                  %th Data
                  %th Publicado?
                  %th 
              %tbody
                - if @pages.present?
                  - @pages.each do |page|
                    %tr
                      %td= page.name
                      %td.col-md-1= page.created_at.strftime("%d/%m/%Y")
                      %td.col-md-1= page.publish ? "Sim" : "Não"
                      %td.col-md-1
                        .btn-group
                          %button.btn.btn-primary.btn-xs.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
                            Ações
                            %span.caret
                          %ul.dropdown-menu
                            %li
                              %a{:href => "#{edit_page_path(page)}"} Editar
                            %li
                              %a{:href => "#{page_path(page)}", :data => { method: :delete }} Remover
                      
                - else
                  %tr
                    %td{colspan: 7}
                      %i Nenhum registro encontrado.
