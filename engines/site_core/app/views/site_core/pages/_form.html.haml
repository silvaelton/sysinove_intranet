= simple_form_for @page do |f|
  .row
    .col-md-10
      = f.input :name
    .col-md-2
      = f.input :publish, as: :select, include_blank: false
  .row
    .col-md-12
      = f.input :content
  .divider
  .row
    .col-md-12
      = f.button :submit, class: 'btn btn-success', data: { disable_with: t(:disable_with)}
      = link_to t(:cancel), pages_path(@params), class: 'btn btn-default'