- if @categories.present?
  - @categories.each_with_index do |category, index|
    %tr
      %td.col-md-1= index + 1
      %td= category.name
      %td.col-md-1= category.status ? "Sim" : "Não"
      %td.col-md-1
        .btn-group
          %button.btn.btn-primary.btn-xs.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
            Ações
            %span.caret
          %ul.dropdown-menu
            %li
              %a{:href => "#{site_core.edit_category_path(category)}", data: { remote: true}} Editar
            %li
              %a{:href => "#{site_core.category_path(category)}", :data => { method: :delete, confirm: t(:confirm) , remote: true}} Remover

- else
  %tr
    %td{colspan: 4}
      %i Nenhum registro encontrado.