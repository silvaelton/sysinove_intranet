.row
  .col-md-12
    %h1.title 
      Detalhamento de chamado
      %small
        %p Detalhamento chamado ##{@ticket.id}
    = link_to "Voltar para meus chamados", tickets_path, class: 'btn btn-primary', data: { disable_with: t(:disable_with)}
.divider
.row
  .col-md-12
    .panel.panel-default
      .panel-heading
        %h3
          %b Situação
          %br/
        %h4= @ticket.situation.humanize
      .panel-body
        = link_to "+ Adicionar comentário", new_ticket_ticket_comment_path(@ticket), class: 'btn btn-success', remote: true, data:  { disable_with: t(:disable_with)}
        .divider
        .index-each
          = render 'index'