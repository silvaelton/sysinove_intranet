= simple_form_for @sector do |f|
  .row
    .col-md-12
      .separator 
        %label Informaçoes básicas
  .row
    .col-md-6
      = f.input :name, placeholder: "Informe o nome completo"
    .col-md-2
      = f.input :publish,as: :select, include_blank: false
  .row
    .col-md-12
      = f.input :observation
  .separator
  .row
    .col-md-12
      = f.button :submit, class: 'btn btn-success', data: { disable_with: t(:disable_with)}
      = link_to t(:cancel), sectors_path, data: { disable_with: t(:disable_with)}, class: 'btn btn-default'