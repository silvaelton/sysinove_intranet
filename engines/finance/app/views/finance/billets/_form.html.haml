= simple_form_for @billet do |f|
  .row
    .col-md-8
      = f.input :name, placeholder: "Informe um nome"
    .col-md-2
      = f.input :cpf, input_html: { class: 'cpf'}
    .col-md-2
      = f.input :cnpj, input_html: { class: 'cnpj'}
  .row
    .col-md-12
      = f.input :description, placeholder: "Informe uma descrição"
  .row
    .col-md-2
      = f.input :due, as: :string, input_html: {class:  'date', value: f.object.due.present? ? localize(f.object.due) : nil}
    .col-md-2
      = f.input :value, as: :string, input_html: { class: 'coin'}
    .col-md-2
      = f.input :paid, as: :select, include_blank: false
    .col-md-2
      = f.input :paid_date, as: :string, input_html: {class:  'date', value: f.object.paid_date.present? ? localize(f.object.paid_date) : nil}
  .row
    .col-md-12
      = f.input :hash_return
  .divider
  .row
    .col-md-12
      = f.button :submit, class: 'btn btn-success', data: { disable_with: t(:disable_with)}
      = link_to t(:cancel), billets_path(@params), class: 'btn btn-default'