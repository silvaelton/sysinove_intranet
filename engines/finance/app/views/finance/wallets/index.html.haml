.row
  .col-md-12
    %h1.title 
      Gestão de centro de custo
      %small
        %p listagem de centro de custo
.divider
.row
  .col-md-12
    .panel.panel-default
      .panel-heading
        %h5
          %b Total listado:
          #{@wallets.count}
      .panel-body
        .row
          .col-md-12
            = link_to "+ Adicionar novo centro de custo", new_wallet_path, class: 'btn btn-success btn-sm', remote: true
        .divider
        .row
          .col-md-12
            %table.table.table-striped.table-bordered
              %thead
                %tr
                  %th.col-md-1 #
                  %th Nome
                  %th Descrição
                  %th.col-md-1 Ativa?
                  %th.col-md-1
              %tbody.index-each
                = render 'index'
    