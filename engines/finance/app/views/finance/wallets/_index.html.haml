- if @wallets.present?
  - @wallets.each_with_index do |wallet, index|
    %tr
      %td.col-md-1= index + 1
      %td= wallet.name
      %td= wallet.description
      %td.col-md-1= wallet.status ? "Sim" : "Não"
      %td.col-md-1
        .btn-group
          %button.btn.btn-primary.btn-xs.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
            Ações
            %span.caret
          %ul.dropdown-menu
            %li
              %a{:href => "#{finance.edit_wallet_path(wallet)}", data: { remote: true}} Editar
            %li
              %a{:href => "#{finance.wallet_path(wallet)}", :data => { method: :delete, confirm: t(:confirm) , remote: true}} Remover

- else
  %tr
    %td{colspan: 4}
      %i Nenhum registro encontrado.